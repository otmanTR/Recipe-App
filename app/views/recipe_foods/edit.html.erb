<h1>Edit Recipe food</h1>

<%# edit the recipe food %>

<%= form_with model: @recipe_food, url: recipe_recipe_food_path(@recipe_food.recipe, @recipe_food), method: :patch do |form| %>
  <div class="field">
    <%= form.label :food_id %>
    <%= form.collection_select :food_id, Food.all, :id, :name %>
  </div>
  <div class="field">
    <%= form.label :quantity %>
    <%= form.text_field :quantity %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>