<%= stylesheet_link_tag 'recipes/index', media: 'all' %>

<div class='recipe_container'>
    <h1>Recipes</h1>
   
    <%@recipes.each do |recipe|%>
     <div class='recipe'>
        <div class='recipe_title'>
            <h1><%= link_to recipe.name, recipe_path(recipe), class:'recipe_name' %></h1>
            <%= link_to 'REMOVE', recipe_path(recipe), data: { turbo_method: :delete, confirm: 'Are you sure?' } %>

        </div>
        <p class="recipe-desc"><%= recipe.description %></p>
 </div>
    <%end%>
    
    <div class='recipe_add'>
        <h2><%= link_to 'Add new Recipe', new_recipe_path, class:'recipe_add_btn' %></h2>
        <h2> <%= link_to 'Public Recipes', public_recipes_path, class:'recipe_add_btn' %></h2>
        <h2> <%= link_to 'Home', root_path, class:'recipe_add_btn' %></h2>
    </div>

   

</div>