<h1>Public Recipes</h1>

<% @recipes.each do |recipe| %>
  <% if recipe.public %>
    <div class='recipe'>
        <div class='recipe_title'>
            <h1><%= link_to recipe.name, recipe_path(recipe), class:'recipe_name' %></h1>
            <h1>By: <%= recipe.user.name %></h1>
            
        </div>
        <div>
            <h1>Total Food of item: <%= recipe.recipe_foods.count %></h1>
            <h1>Total Price: <%= recipe.recipe_foods.sum { |recipe_food| recipe_food.food.price } %></h1>
        </div>   
    </div>

    <% end %>
    
  <% end %>

<h1> <%= link_to 'Back', recipes_path, class:'recipe_add_btn' %></h1>
<h1> <%= link_to 'Home', root_path, class:'recipe_add_btn' %></h1>