<div class='shopping-container'>

<h1>Shopping List</h1>

<div class='shopping_lists'>
<h2>Amount of food items to buy: <%= @recipe.recipe_foods.count %> </h2>
<h2>Total value of food needed: $<%= @recipe.recipe_foods.sum { |recipe_food| recipe_food.food.price } %> </h2>
</div>

<table>
  <thead>
    <tr>
      <th>Food</th>
      <th>Quantity</th>
      <th>Value</th>
    </tr>
  </thead>

  <tbody>
    <% @recipe.recipe_foods.each do |ingredient| %>
      <tr>
        <td><%= ingredient.food.name %></td>
        <td><%= ingredient.quantity %></td>
        <td><%= ingredient.food.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2><%=link_to 'Back', recipe_path(@recipe.id)%></h2>

</div>