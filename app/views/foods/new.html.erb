<h1>Create new food</h1>

<%= form_with model: @food, url: foods_path(current_user) do |form| %>
    <div>
      <%= form.label :name%><br>
      <%= form.text_field :name, placeholder: 'Enter food name', required: true %>
    </div>

    <div>
      <%= form.label :measurement_unit%><br>
      <%= form.text_field :measurement_unit, placeholder: 'Enter unit', required: true %>
    </div>

    <div>
      <%= form.label :price%><br>
      <%= form.text_field :price, placeholder: 'Price', required: true %>
    </div>

    <div>
      <%= form.label :quantity%><br>
      <%= form.number_field :quantity, min: 0, placeholder: 'Quantity', required: true %>
    </div>

    <%= form.submit %>
<% end %>